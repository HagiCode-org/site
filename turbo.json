{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "VITE_CLARITY_PROJECT_ID",
    "VITE_CLARITY_DEBUG",
    "CLARITY_PROJECT_ID",
    "CLARITY_DEBUG"
  ],
  "tasks": {
    "clean": {
      "cache": false
    },
    "clean:docs": {
      "cache": false
    },
    "clean:website": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".astro/**"],
      "env": [
        "VITE_CLARITY_PROJECT_ID",
        "VITE_CLARITY_DEBUG",
        "CLARITY_PROJECT_ID",
        "CLARITY_DEBUG",
        "NODE_ENV"
      ]
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"]
    }
  }
}
