---
/**
 * Microsoft Clarity 用户行为分析集成组件
 * 仅在生产环境加载 Clarity 脚本
 *
 * @see https://learn.microsoft.com/en-us/clarity/
 */
// Astro 组件在服务端执行时可以直接访问 process.env
// 对于构建时静态生成，process.env 在构建时可用
const clarityProjectId = process.env.VITE_CLARITY_PROJECT_ID || process.env.CLARITY_PROJECT_ID;
const isProduction = import.meta.env.PROD;

// 在构建时检查是否应该加载 Clarity
// 仅在生产环境且配置了 Project ID 时加载
const shouldLoadClarity = isProduction && clarityProjectId;

// 可选的构建时调试日志
if (process.env.VITE_CLARITY_DEBUG || process.env.CLARITY_DEBUG) {
  console.log('[Clarity] Build-time state:', {
    isProduction,
    clarityProjectId: clarityProjectId ? '***' + clarityProjectId.slice(-4) : 'not set',
    shouldLoadClarity: !!shouldLoadClarity,
    NODE_ENV: process.env.NODE_ENV,
  });
}
---

{shouldLoadClarity && (
  <script is:inline define:vars={{clarityProjectId}}>
    (function(c,l,a,r,i,t,y){
        c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
        t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
        y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
    })(window, document, "clarity", "script", clarityProjectId);
  </script>
)}
